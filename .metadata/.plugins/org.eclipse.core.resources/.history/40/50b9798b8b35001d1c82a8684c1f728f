package sec;

public class Type2 {

	public static void main(String[] args) {
		int[] arr1 = {10,20,30};
		int[] arr2 = {10,20,30};
		int[] arr3 = null; //reference type은 null값을 허용하나 pointer(히프영역의 주소)가 null이 되어 참조할수 없는 예외가 발생됨
		//int a= null; - primitive type은  null값일 수 없다.
		
		arr3[0] = 20;
		//System.out.println(arr3[0]);
		System.out.println(arr1[1]);

	}

}
