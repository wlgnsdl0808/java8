package sec4;

import java.util.Scanner;

public class Ex5 {

	public static void main(String[] args) {
		boolean run =true;
		
		int balance = 0;
		
		Scanner scanner = new Scanner(System.in);
		
		while(run){
			System.out.println("----------------------------------");
			System.out.println("1.예금 | 2.출금 | 3.잔고 | 4.종료");
			System.out.println("----------------------------------");
			System.out.print("선택> ");
		}
		
		
		if(scanner == 49)
		{
			System.out.println("예금액> "+scanner);
			balance=balance+scanner;
		}

	}

}
